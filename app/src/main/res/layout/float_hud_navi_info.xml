<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="158px"
    android:orientation="vertical"
    tools:background="@color/black"
    tools:layout_width="268px"
    tools:layout_height="158px">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDriverWay"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:orientation="horizontal"
        tools:itemCount="4"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_hub_drive_way" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:paddingRight="20px">

        <LinearLayout
            android:layout_width="20px"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvCameraSpeed"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_marginTop="20px"
                android:autoSizeMaxTextSize="14px"
                android:autoSizeMinTextSize="8px"
                android:autoSizeTextType="uniform"
                android:background="@drawable/bg_hud_navi_info_camera_speed"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:padding="1px"
                android:text="80"
                android:textColor="@color/white"
                android:textSize="14px"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="60px"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="false"
                android:scaleType="centerInside"
                tools:src="@drawable/ic_hud_sou_13" />

            <TextView
                android:id="@+id/tvIconType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="gone" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSegRemain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:minLines="1"
                android:textColor="@color/white"
                android:textSize="20px"
                tools:text="8.8 公里 进入" />

            <TextView
                android:id="@+id/tvRoadName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="16px"
                android:autoSizeMinTextSize="10px"
                android:autoSizeTextType="uniform"
                android:minLines="1"
                android:textColor="@color/white"
                android:textSize="18px"
                tools:text="无名道路" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvNextRoadName"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="16px"
        android:autoSizeMinTextSize="10px"
        android:autoSizeTextType="uniform"
        android:minLines="1"
        android:textColor="@color/white"
        android:textSize="18px"
        tools:text="无名道路" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24px"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingRight="20px">

        <TextClock
            android:id="@+id/tvClock"
            android:layout_width="52px"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:format12Hour="HH:mm"
            android:format24Hour="HH:mm"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="18px" />

        <TextView
            android:id="@+id/tvRemainInfo"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="16px"
            android:autoSizeMinTextSize="10px"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="10px"
            android:textColor="@color/white"
            android:textSize="16px"
            tools:text="15公里·46分钟" />


        <TextView
            android:id="@+id/tvArriveTime"
            android:layout_width="66px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="16px"
            tools:text="88:88到" />
    </LinearLayout>


</LinearLayout>